<h1><%= title %></h1>

<form 
  method="post"
  action="<%= isEdit ? `/genero/${genre?.id}/editar` : '/genero/criar' %>"
>
  <%- include("../../partials/form-errors", errors) %>

  <div class="mb-3">
    <label class="form-label" for="genre">Nome:</label>
    
    <input
      class="form-control"
      type="text"
      name="genre"
      id="genre"
      placeholder="Ex.: Corrida"
      value="<%= genre?.name || '' %>"
      maxlength="50"
      required
    />
  </div>

  <input type="hidden" name="id" value="<%= genre?.id || '' %>">

  <button class="btn btn-success" type="submit">Salvar</button>

  <% const upperUrl = isEdit ? `/genero/${genre?.id}` : "/generos" %>

  <a class="btn btn-light" href="<%= upperUrl %>">
    Cancelar
  </a>
</form>
