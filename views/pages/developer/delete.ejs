      <% }) %>
    </ul>
  </div>
  <% } %> 

  <button class="btn btn-danger" type="submit">Sim, apagar</button>
  <a class="btn btn-light" href="<%= `/desenvolvedor/${developer.id}` %>">N達o</a>
</form>
